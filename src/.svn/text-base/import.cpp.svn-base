long GetAvailableMemory(void) {
	void *p, *q;
	long siz = 10000000;
	q = p = calloc(1, siz);
	while (q) {
		siz = siz * 1.2; // Can be more to speed up things
		q = realloc(p, siz);
		if (q)// infinite virtual mem :{ 31107287834197
			p = q;
	}
	free(p);
	return siz;
}

